<%= render "shared/navbar" %>
<div class="container">
  <div class="my-8 col-lg-6 col-md-8 mx-auto">
      <h1 class ="text-center mt-4">spaceshipsrus</h1>
      <p class ="text-center mt-4">Choose the spaceship of your dreams</p>
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions text-center">
        <%= f.button :submit, "Log in", class: "btn btn-success text-center"  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
